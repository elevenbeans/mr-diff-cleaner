{
  "name": "Gitlab MR cleaner",
  "version": "1.0",
  "description": "Delete annoying folder in gitlab MR",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "http://*.ctripcorp.com/*/merge_requests/*",
    "https://*.ctripcorp.com/*/merge_requests/*"
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "matches": [
        "http://*.ctripcorp.com/*/merge_requests/*",
        "https://*.ctripcorp.com/*/merge_requests/*"
    ],
    "js": [
        "vendor/jquery.js",
        "contentScript.js"
    ]
  }],
  "options_page": "options.html",
  "manifest_version": 2
}
